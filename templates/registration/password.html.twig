{% extends 'base.html.twig' %}

{%  block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <h1>
        Modification du mot de passe
    </h1>
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <label class="mx-5 col-6 col-md-3 form-label">Mot de passe</label>
            <div class="mx-5 col-6 col-md-3 form-control">
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <label class="mx-5 col-6 col-md-3 form-label">Répétez le mot de passe</label>
            <div class="mx-5 col-6 col-md-3 form-control">
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary px-2 mx-2">Enregister</button>
        <a class="btn btn-outline-primary px-2 mx-2" href="{{ path('app_update_profil') }}">Retour au profil</a>
        {{ form_end(form) }}
    </div>
{% endblock %}