{% extends 'base.html.twig' %}
{% block title %}Profil de  {{ app.user.pseudo }}!{% endblock %}
{% block body %}

        <div class="row">
                <div class="col-5">
                        <img src="{{ asset(photo_path ~ photo) }}" alt="Photo de profil" class="img-fluid rounded-5 mx-auto my-5 d-block">
                </div>
                <div class="col-7">
                        <div class="container mt-5">
                                <div class="row">
                                        <h2>{{ app.user.pseudo}}</h2>
                                </div>
                                <div class="row">
                                        <p class="col-2">Prénom&nbsp;:</p>
                                        <p class="col">{{app.user.firstname}}</p>
                                </div>
                                <div class="row">
                                        <p class="col-2">Nom&nbsp;:</p>
                                        <p class="col">{{app.user.name}}</p>
                                </div>
                                <div class="row">
                                        <p class="col-2">Téléphone&nbsp;:</p>

                                        <p class="col">0{{app.user.phoneNumber}}</p>
                                </div>
                                <div class="row">
                                        <p class="col-2">E-mail&nbsp;:</p>
                                        <p class="col">{{app.user.email}}</p>
                                </div>
                                <div class="row">
                                        <p class="col-2">Campus&nbsp;:</p>
                                        <p class="col">{{app.user.campus.nom}}</p>
                                </div>
                                <div class="row">
                                        <div class="col mx-2">
                                               <button class="btn btn-outline-info little" onclick="window.location.href = '{{ path('app_home') }}';">Retour</button>
                                        </div>
                                        <div class="col mx-2">
                                                <button class="mx-2 btn btn-outline-info little" onclick="window.location.href = '{{ path('app_update_profil') }}';">Mettre à jour le profil</button>
                                        </div>
                                        <div class="col-4 mx-2">
                                                <button class="mx-2 btn btn-outline-info little" onclick="window.location.href = '{{ path('app_password_profil') }}';">Mettre à jour le mot de passe</button>
                                        </div>
                                </div>

                        </div>
                </div>
        </div>



{% endblock %}
