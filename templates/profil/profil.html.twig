{% extends 'base.html.twig' %}

{% block title %}Profil de  {{ app.user.pseudo }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ app.user.pseudo}} </h1>
</div>

<div class="info-user">

        Prénom : {{app.user.firstname}}
        <br />
        Nom : {{ app.user.name }}
        <br />
        Téléphone : {{ app.user.phoneNumber }}
        <br />
        Email : {{ app.user.email }}
        <br />
        Campus : {{ app.user.campus.nom }}
        <br />
</div>

        <button onclick="window.location.href = 'http://localhost:8888/sortir/public/';">Retour</button>


{% endblock %}
