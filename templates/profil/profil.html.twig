{% extends 'base.html.twig' %}

{% block title %}Profil de  {{ app.user.pseudo }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <div style="display: flex; flex-direction: row;">
                <div style="width: 40%; background-color: red">

                </div>
                <div style="display: flex; flex-direction: column; height: 250px; justify-content: space-between;  margin-left: 20px">
                        <div>
                                <h2>{{ app.user.pseudo}} </h2>
                        </div>
                        <div>
                                Prénom : {{app.user.firstname}}
                                <br />
                                Nom : {{ app.user.name }}
                                <br />
                                Téléphone : {{ app.user.phoneNumber }}
                                <br />
                                Email : {{ app.user.email }}
                                <br />
                                Campus : {{ app.user.campus.nom }}
                                <br />
                        </div>
                        <div>
                                <button onclick="window.location.href = '{{ path('app_home') }}';">Retour</button></div>
                        </div>
                </div>
        </div>



{% endblock %}
